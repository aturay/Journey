.admin_panel
  %h1 Админ панель

  - if user_signed_in?

    %table
      %thead
        %tr
          %th Id
          %th Name
          %th Email
          %th Nickname
          %th Provider
          %th URL
          %th Count
          %th Credentials
          %th Action
      %tbody
        - @users.each do |user|
          %tr
            %td= link_to user.id, user
            %td= link_to user.username, user.url || '-'
            %td= user.email  || '-'
            %td= user.nickname  || '-'
            %td= user.provider  || '-'
            %td= user.url  || '-'
            %td= user.sign_in_count  || '-'
            %td= user.credentials  || '-'
            %td= link_to 'Destory', user_path(user), method: :delete, confirm: 'Are you sure?'

  - else
    %h1 юзер не афторизован
