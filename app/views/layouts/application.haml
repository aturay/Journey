!!!
%html
  %head
    %title Journey
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
  %body
    #sign_in_status
      %ul.nav

        - if user_signed_in?
          %li= link_to "#{current_user.username} (#{current_user.provider})", current_user.url
          %li#current_user_mail= current_user.email
          %li
            Статус
            = current_user.credentials
          %li= link_to 'Выйти', destroy_user_session_path, :method => :delete

        - else

          %li= link_to 'Войти', new_user_session_path
          %li= link_to 'Зарегистрироваться', new_user_registration_path
          %li= link_to "Sign in with Vkontakte", users_omniauth_callbacks_vkontakte_path

    = yield

    %canvas.blur{src: asset_path("abstract-wallpaper-abstract-wallpapers.jpg")}
    = javascript_include_tag 'application'
