= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  %h2 Зарегистрироваться
  = devise_error_messages!

  .field
    = f.label :email
    = f.email_field :email, autofocus: true
  .field
    = f.label :password, value: 'Пароль'
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation, value: 'Повторить '
    = f.password_field :password_confirmation, autocomplete: "off"
  .field
    = f.label :username, value: 'ФИО'
    = f.text_field :username
  .field
    = f.label :phone, value: 'Телефон'
    = f.text_field :phone
  .field
    = f.label :city, value: 'Город'
    = f.text_field :city
  .field.file
    = f.label :file, value: 'Документ'
    = f.file_field :file
  .actions
    = f.hidden_field :credentials, value: 'hand'
    = f.submit "Зарегистрироваться"
    %br
    = link_to "Sign in with Vkontakte", user_vkontakte_omniauth_callback_path
    -# = link_to "Sign in with Vkontakte", users_omniauth_callbacks_vkontakte_path
  .clear

